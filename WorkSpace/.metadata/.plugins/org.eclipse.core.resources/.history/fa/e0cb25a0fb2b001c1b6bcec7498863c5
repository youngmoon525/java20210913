package pack03_OOP;

import java.util.Random;

public class StudentDTO {
	//-이름 , 과목[] ,점수[], 등급 , 학생의 번호
	//(과목[] = { "자바" , "CSS" , "javaScript" })
	//점수[] = {   80 ,  50 , 100 } <- 과목이랑 Length똑같음.
	String name ;//이름
	String[] subject;//과목
	int[] scores; //점수
	String grade; //등급
	int num ; //학생의번호
	public StudentDTO(String name, String[] subject , int num) {
		super();
		this.name = name;
		this.subject = subject;
		this.num = num;
		if(subject != null) {
			this.scores = new int[subject.length];
		}
		Random r = new Random();
		for (int i = 0; i < scores.length; i++) {
			scores[i] = r.nextInt(100)+1;//1~100
		}
	}
	
	public StudentDTO(String name, String[] subject) {
		super();
		this.name = name;
		this.subject = subject;
		if(subject != null) {
			this.scores = new int[subject.length];
			Random r = new Random();
			for (int i = 0; i < scores.length; i++) {
				scores[i] = r.nextInt(100)+1;//1~100
			}
		}
		
	}
	
	
	
	
}
