package pack01_OOP;

public class Student {

	String name;
	int kor , eng , mat  , sum ;
	double avg; 
	
	void setAvg() {
		avg = (double) sum /3 ;
	}
	void setSum() {
		sum = kor + eng + mat;
	}
	
	void display() {
		System.out.println("이름 : " + name);
		System.out.print(" 국어 : " + kor);
		System.out.print(" 영어 : " + eng);
		System.out.print(" 수학 : " + mat);
		System.out.println("총점 :" + sum);
		System.out.println("평균 :" + avg);
	}
}
